extends layout

block content
  h1= title
  .inputform.form-group
  .form-group
    label(for='exampleInputEmail1') Entry Name
    input#exampleInputEntry.form-control(type='text', aria-describedby='textHelp', placeholder='Entry Name ')
    small#emailHelp.form-text.text-muted An article name can by anything you want!
  .form-group
    label(for='/inserturl') Entry Type
    select#insert1.form-control
      option How-to Guide
      option Advice
      option Question?
      option Other
  .form-group
    label(for='/inserturl') Disaster Type
    select#insert1.form-control
      option Forrest Fire
      option Storm
      option Drought
      option Flood
      option Other
  .form-group
    label(for='hubentry') Your entry
    textarea#hubentry.form-control(rows='3')
    small#emailHelp.form-text.text-muted Go on just start writing...
  .form-group
    label(for='uploadimage') Upload Image
    input#uploadimage.form-control-file(type='image', aria-describedby='imagehelp')
    small#fileHelp.form-text.text-muted
      | Upload an image here or anything that might help everyone get to understand your entry better!
  .button.btn.btn-primary(type='submit') Submit
  .inputform
